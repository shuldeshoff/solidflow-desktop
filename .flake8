[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    .eggs,
    *.egg
ignore =
    # Whitespace before ':'
    E203,
    # Line too long (handled by black)
    E501,
    # Line break before binary operator
    W503
per-file-ignores =
    __init__.py:F401

